<Window x:Class="WPC_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPC_Interface"
        mc:Ignorable="d"
        Title="WPC Interface" Height="450" Width="800">
    
    <Window.InputBindings>
        <KeyBinding Command="ApplicationCommands.Close" Key="Esc" />
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommandBinding_Executed" />
    </Window.CommandBindings>

    <Grid>
		<Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="154,135,0,0" Click="Button_Click"/>
		<Label x:Name="label1" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,132,0,0" Width="172"/>
		<Button x:Name="con_btn" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="154,183,0,0" Click="con_btn_Click"/>
		<RichTextBox x:Name="Commdata" Margin="437,112,143,93"/>

	</Grid>
</Window>
